<Page x:Class="Calender_Projects.CreateEventPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calender_Projects"
        mc:Ignorable="d"
        Title="Create Event Page" Height="600" Width="1080"
        ShowsNavigationUI="False">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Button.Height" Value="30"/>
            <Setter Property="Button.Width" Value="80"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Label.FontSize" Value=" 13"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="ComboBox.Width" Value="150"/>
        </Style>
    </Page.Resources>
    
    <Grid Background="LightSkyBlue">
        <DockPanel Margin="0,0,363,550">
            <Button x:Name="SaveEvent"
                    Content="Save"
                    Margin="10 0 0 0"
                    Click="SaveEvent_Click"/>
            <Button x:Name="GoBackEvent"
                    Content="Go Back"
                    Margin="0 0 450 0"
                    Click="GoBackEvent_Click"/>
        </DockPanel>
        <StackPanel Margin="0 62 1 0"
                    HorizontalAlignment="Center">
            
            <DockPanel Margin="0 0 0 20">
                <Label x:Name="EventNameLabel"
                   Content="Event Name:"
                   Margin="0 0 0 0"/>
                <TextBox Width="400"
                         Height="25"
                         Margin="0 0 400 0"/>
            </DockPanel>
            
            <Label x:Name="StartLabel"
                   Content="Start"
                   Margin="0 0 980 0"/>
            <ComboBox x:Name="StartBox" 
                      Margin="0 0 860 0"/>
            <Label x:Name="EndLabel"
                   Content="End"
                   Margin="0 0 980 0"/>
            <ComboBox x:Name="EndBox" 
                      Margin="0 0 860 0"/>
            
            
            <Label x:Name="DurationLabel"
                   Content="Duration"
                   Margin="200 -50 360 22"/>
            <ComboBox x:Name="DurationBox" 
                      Margin="0 -23 460 10"/>
            <Label x:Name="RepeatLabel"
                   Content="Repeat"
                   Margin="200 -107 380 120"/>
            <ComboBox x:Name="RepeatBox" 
                      Margin="0 -123 460 120"/>
            
            
            <Label x:Name="ShowAsLabel"
                   Content="Show As"
                   Margin="400 -165 180 150"/>
            <ComboBox x:Name="ShowAsBox" 
                      Margin="300 -155 360 200"/>
            
            
            <Label x:Name="DescLabel"
                   Content="Description"
                   Margin="0 -120 0 110"/>
            <TextBox Width="1000"
                     Height="300"
                     Margin="10,-110,9,0"/>
        </StackPanel>
    </Grid>
</Page>
